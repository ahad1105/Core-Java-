
class Printer 
{
	public void show(Number i)  //number i is a abstract class that extends int , float , double values  , so instead of method overriding one can easily call a single method and use Number keyword 
	{
		System.out.println(i);
	}
	
public class AbstractDemo 
{
	public static void main(String[] args)
	{
		Printer obj = new Printer();
		obj.show(5.4f);
	}
}
